<div id="c-artists">
  <div id="a-search">
    <h1>Search Artists</h1>
    
    <div id="search-form">
      <%= form_tag(artists_path, :method => :get, :class => "simple_form") do %>
        <%= search_field "name" %>
        <%= submit_tag "Search" %>
      <% end %>
    </div>
  </div>
</div>

<%= render "secondary_links" %>

<% content_for(:page_title) do %>
  Search Artists - <%= Danbooru.config.app_name %>
<% end %>
