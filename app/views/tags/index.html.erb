<div id="c-tags">
  <div id="a-index">
    <table class="striped">
      <thead>
        <tr>
          <th>Count</th>
          <th>Name</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @tags.each do |tag| %>
          <tr>
            <td><%= tag.post_count %></td>
            <td class="category-<%= tag.category %>">
              <%= link_to("?", wiki_pages_path(:title => tag.name)) %>
              <%= link_to(tag.name, posts_path(:tags => tag.name)) %>
            </td>
            <td>
              <% if CurrentUser.is_builder? %>
                <%= link_to "edit", edit_tag_path(tag) %>
                <% if tag.post_count < 1_000 %>
                  | <%= link_to "fix", new_tag_correction_path(:tag_id => tag.id) %>
                <% end %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <%= numbered_paginator(@tags) %>
  </div>
</div>

<%= render "secondary_links" %>

<% content_for(:page_title) do %>
  Tags - <%= Danbooru.config.app_name %>
<% end %>
