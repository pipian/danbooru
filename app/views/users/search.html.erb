<div id="c-users">
  <div id="a-search">
    <%= form_tag(users_path, :method => :get, :class => "simple_form") do %>
      <div class="input">
	<label for="search_name_matches">Name</label>
	<%= search_field_tag("search[name_matches]") %>
      </div>
      
      <div class="input">
        <label for="search_min_level">Min Level</label>
        <%= select_tag("search[min_level]", options_for_select(User.level_hash.to_a)) %>
      </div>
      
      <%= submit_tag "Search" %>
    <% end %>
  </div>
</div>

<%= render "secondary_links" %>

<% content_for(:page_title) do %>
  Search Users - <%= Danbooru.config.app_name %>
<% end %>
